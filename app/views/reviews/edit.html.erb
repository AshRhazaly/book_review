<h1>Editing Review</h1>

<%= form_for ([@book,@review]) do |f| %>

        <p>
            <%= f.label :name %><br>
            <%= f.text_field :name %>
        </p>



        <p>
            <%= f.label :content %><br>
            <%= f.text_area :content %>
        </p>


        <%= f.submit 'Submit' %>
        <% end %>


<%= link_to 'Show', @book %> |
<%= link_to 'Back', book_path(@book) %>
