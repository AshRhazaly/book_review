<section class="container-fluid main-container">
<article class="row book-content">

<% @books.each do |book| %>
<%= content_tag(:div, class: 'col-xs-4 book-container') do %>

<header class="book-title">
        <%= book.title %>
</header>
<section class="book-author-category">
      <div class="book-author">by <%= book.author %></div>
      <div class="book-category"> <%= book.category %></div>
</section>
<section class="book-summary">
        <%= book.summary %>
</section>
<footer class="book-links">
  <span class="glyphicon glyphicon-book" aria-hidden="true"></span>
        <%= link_to 'Reviews', book_path(book) %>
  <span>&nbsp&nbsp&nbsp</span>
  <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        <%= link_to 'Edit', edit_book_path(book) %>
  <span>&nbsp&nbsp&nbsp</span>
  <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
        <%= link_to 'Delete Book', book, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
          <% end %>

</footer>

</article>
</section>
