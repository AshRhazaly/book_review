<section class="container-fluid book-review">
    <section class="col-xs-6 book_summary">
        <section class="book-title">
            <%= @book.title %>
        </section>

        <section class="book-author">
            Author:
            <%= @book.author %>
        </section>

        <section class="book-category">
            Category:
            <%= @book.category %>
        </section>
        <section class="book-summary">
            <%= @book.summary %>
        </section>
        <footer class="bottom-edit">
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            <%= link_to 'Edit', edit_book_path(@book) %>
        </footer>
    </section>
    <section class="col-xs-6 book_review">
        <section class="book-review-title">Reviews</section>
        <% @book.reviews.each do |review| %>
        <section class="book-review-name">
            <%= review.name %>
        </section>

        <section class="book-review-content">
            Review:
            <%= review.content %>
        </section>
        <span class="glyphicon glyphicon-book" aria-hidden="true"></span>
        <%= link_to 'Add a new review', new_book_review_path(@book) %>
        <span>&nbsp&nbsp&nbsp</span>
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>

        <%= link_to 'Edit', edit_book_review_path(@book, review) %>
        <span>&nbsp&nbsp&nbsp</span>
        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
        <%= link_to 'Delete', book_review_path(@book, review), method: :delete, data: { confirm: 'Are you sure?' } %>
        <%end%>
    </section>
</section>
<footer class="page-footer">
    <%= link_to 'Add a new review', new_book_review_path(@book) %>
    <br/>
    <br/>
    <%= link_to 'Back', books_path, class:"btn btn-default"%>
</footer>
